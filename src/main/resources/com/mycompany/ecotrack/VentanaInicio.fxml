<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #F4F9F4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.LoginController">
    <children>
        <Label text="EcoTrack" textFill="#2D5A27">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        
        <VBox maxWidth="300.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <children>
                <Label text="Usuario" textFill="#555555" />
                <TextField fx:id="userField" promptText="Ingrese su usuario" style="-fx-background-radius: 5;" />
                
                <Label text="Contraseña" textFill="#555555">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="passwordField" promptText="********" style="-fx-background-radius: 5;" />
                
                <Button fx:id="loginButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Iniciar Sesión">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Button>
            </children>
        </VBox>
        
        <Label text="Sistema Inteligente de Gestión de Residuos" textFill="#888888">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
    </children>
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
</VBox>
